/* 水平间距 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}
.page-content {
  padding: 24rpx 32rpx 48rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.nav-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.nav-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: rgba(0, 122, 255, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.header-link {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  background: #ffffff;
  font-size: 24rpx;
  color: #007aff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}
.profile {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #007aff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 600;
  box-shadow: 0 16rpx 32rpx rgba(0, 122, 255, 0.25);
}
.info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.name {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
}
.email {
  font-size: 26rpx;
  color: #666;
}
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}
.card-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.actions {
  display: flex;
  justify-content: space-between;
}
.action {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  color: #333;
}
.action-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 30rpx;
  background: #f5f7ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
}
.action-label {
  font-size: 26rpx;
}
.notice {
  padding: 24rpx;
  border-radius: 20rpx;
  background: #f5f7ff;
  color: #666;
  font-size: 26rpx;
}