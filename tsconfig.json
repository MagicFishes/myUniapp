{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["esnext", "dom"],
    "types": [
      "@dcloudio/types",
      "uni-modules/uview-plus/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.vue",
    "**/*.js"
  ],
  "exclude": ["node_modules", "unpackage"]
}

