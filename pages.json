			}
		}, {
			"path": "pages/booking",
			"style": {
				"navigationBarTitleText": "填写订单信息",
				"navigationBarBackgroundColor": "#FFFFFF",
				"navigationBarTextStyle": "black"
			}
		}]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Anydoor 旅途",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F5F5F5",
